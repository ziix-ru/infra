ui:
  title: "{{ gatus.ui.title }}"
  header: "{{ gatus.ui.header }}"
  description: "{{ gatus.ui.description }}"
  default-sort-by: group

# [ Alerting ]
{% if gatus.alerting.telegram.token and gatus.alerting.telegram.chat_id %}
alerting:
  telegram:
    token: "{{ gatus.alerting.telegram.token }}"
    id: "{{ gatus.alerting.telegram.chat_id }}"
    default-alert:
      description: "Service check failed"
      failure-threshold: {{ gatus.alerting.failure_threshold }}
      success-threshold: {{ gatus.alerting.success_threshold }}
      send-on-resolved: {{ gatus.alerting.send_on_resolved | lower }}
{% endif %}

